<%= flash_messages %>
<h2>Products</h2>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  	$<%= @product.price %>
</p>

<p>
  <strong>Image:</strong>
  	<%= image_tag(@product.image_url(:thumb).to_s) %>
</p>
	
<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-warning" %>
<%= link_to "Back", products_path, class: "btn btn-default" %>
